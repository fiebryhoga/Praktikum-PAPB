<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/main"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#ffff"
	tools:context=".MainActivity">

	<TextView
		android:id="@+id/tvHello"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Hello Mr.Head"
		android:textColor="@color/black"
		android:textSize="24sp"
		android:textStyle="bold"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		android:layout_marginTop="16dp"/>

	<TextView
		android:id="@+id/tvEmail"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Email"
		android:textSize="18sp"
		app:layout_constraintTop_toBottomOf="@id/tvHello"
		app:layout_constraintStart_toStartOf="parent"
		android:layout_marginTop="16dp"/>


	<TextView
		android:id="@+id/tvPassword"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="8dp"
		android:text="Password"
		android:textSize="18sp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/tvEmail" />

	<ImageView
		android:id="@+id/imgBody"
		android:layout_width="234dp"
		android:layout_height="259dp"
		android:layout_marginTop="30dp"
		android:scaleType="fitCenter"
		android:src="@drawable/body"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.497"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/tvPassword" />

	<ImageView
		android:id="@+id/imgHair"
		android:layout_width="220dp"
		android:layout_height="wrap_content"
		android:scaleType="fitCenter"
		android:src="@drawable/hair"
		android:paddingTop="60dp"
		app:layout_constraintEnd_toEndOf="@id/imgBody"
		app:layout_constraintStart_toStartOf="@id/imgBody"
		app:layout_constraintTop_toTopOf="@id/imgBody"
		app:layout_constraintBottom_toTopOf="@id/imgBody"/>


	<ImageView
		android:id="@+id/imgEyebrows"
		android:layout_width="80dp"
		android:layout_height="wrap_content"
		android:src="@drawable/eyebrow"
		android:scaleType="fitCenter"
		android:paddingTop="40dp"
		app:layout_constraintTop_toTopOf="@id/imgBody"
		app:layout_constraintStart_toStartOf="@id/imgBody"
		app:layout_constraintEnd_toEndOf="@id/imgBody"
		app:layout_constraintTop_toBottomOf="@id/imgHair" />

	<ImageView
		android:id="@+id/imgEyes"
		android:layout_width="59dp"
		android:layout_height="61dp"
		android:scaleType="fitCenter"
		android:src="@drawable/eyes"
		app:layout_constraintBottom_toBottomOf="@id/imgEyebrows"
		app:layout_constraintEnd_toEndOf="@id/imgBody"
		app:layout_constraintStart_toStartOf="@id/imgBody"
		app:layout_constraintTop_toBottomOf="@id/imgEyebrows" />





	<ImageView
		android:id="@+id/imgBeard"
		android:layout_width="120dp"
		android:layout_height="81dp"
		android:scaleType="fitCenter"
		android:src="@drawable/beard"
		android:layout_marginBottom="5dp"
		app:layout_constraintEnd_toEndOf="@id/imgBody"
		app:layout_constraintStart_toStartOf="@id/imgBody"
		app:layout_constraintBottom_toBottomOf="@id/imgBody"/>

	<ImageView
		android:id="@+id/imgMoustache"
		android:layout_width="227dp"
		android:layout_height="65dp"
		android:src="@drawable/moustache"
		app:layout_constraintTop_toBottomOf="@id/imgEyes"
		android:layout_marginBottom="20dp"
		app:layout_constraintEnd_toEndOf="@id/imgBody"
		app:layout_constraintStart_toStartOf="@id/imgBody" />


	<LinearLayout
		android:id="@+id/containerCheckbox"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:orientation="vertical"
		android:paddingLeft="160dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintTop_toBottomOf="@id/imgBody"
		app:layout_constraintVertical_bias="0.0"
		tools:ignore="MissingConstraints"
		tools:layout_editor_absoluteX="0dp">


		<CheckBox
			android:id="@+id/checkHead"
			android:layout_width="wrap_content"
			android:layout_height="33dp"
			android:checked="true"
			android:text="Body"
			android:textColor="@color/black" />

		<CheckBox
			android:id="@+id/checkHair"
			android:layout_width="wrap_content"
			android:layout_height="29dp"
			android:checked="true"
			android:text="Hair"
			android:textColor="@color/black"
			app:layout_constraintTop_toBottomOf="@id/checkHead" />

		<CheckBox
			android:id="@+id/checkEyebrow"
			android:layout_width="wrap_content"
			android:layout_height="29dp"
			android:checked="true"
			android:text="Eyebrow"
			android:textColor="@color/black" />

		<CheckBox
			android:id="@+id/checkEyes"
			android:layout_width="wrap_content"
			android:layout_height="26dp"
			android:checked="true"
			android:text="Eyes"
			android:textColor="@color/black"
			app:layout_constraintTop_toBottomOf="@id/checkHead" />

		<CheckBox
			android:id="@+id/checkMoustache"
			android:layout_width="wrap_content"
			android:layout_height="30dp"
			android:checked="true"
			android:text="Moustache"
			android:textColor="@color/black" />

		<CheckBox
			android:id="@+id/checkBeard"
			android:layout_width="wrap_content"
			android:layout_height="37dp"
			android:checked="true"
			android:text="Beard"
			android:textColor="@color/black"
			app:layout_constraintTop_toBottomOf="@id/checkHead" />


	</LinearLayout>

	<Button
		android:id="@+id/btnProfile"
		android:layout_width="255dp"
		android:layout_height="47dp"
		android:layout_marginTop="30dp"
		android:background="@drawable/bg_button"
		android:text="Profile Developer"
		android:textAllCaps="true"
		android:textSize="16sp"
		android:textStyle="bold"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toBottomOf="@id/containerCheckbox" />




</androidx.constraintlayout.widget.ConstraintLayout>
